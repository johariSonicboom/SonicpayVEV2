            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:title="Mastercard (Debt Recovery)"
            android:key="@string/MasterDRBatchNo"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="EMV Mode" android:key="cEMVMode">
        <SwitchPreference android:title="Enable PreAuth" android:key="@string/EnablePreAuth" app:useSimpleSummaryProvider="true"/>
