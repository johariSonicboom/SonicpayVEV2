            android:title="American Express"
            android:inputType="number"
            android:key="@string/AmexBatchNo"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:title="MyDebit"
            android:inputType="number"
            android:key="@string/MCCSBatchNo"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:title="UnionPay"
            android:key="@string/UPIBatchNo"
            app:useSimpleSummaryProvider="true"/>
