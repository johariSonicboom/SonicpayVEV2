            android:key="@string/AcquirerBank"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:key="cEMVAppSelection" android:title="EMV App Selection">
        <SwitchPreference android:title="Opt-In" android:key="@string/EmvOptIn"/>
    </PreferenceCategory>

    <PreferenceCategory android:key="cEMVBatchNo" android:title="Batch No">
        <EditTextPreference
            android:title="Visa/Mastercard"
            android:key="@string/VisaMasterBatchNo"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:title="Visa"
            android:key="@string/VisaBatchNo"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            android:title="Mastercard"
            android:key="@string/MasterBatchNo"
            app:useSimpleSummaryProvider="true"/>
